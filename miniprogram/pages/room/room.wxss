/* pages/room/room.wxss */

/* ==================== 全局与容器 ==================== */
page {
  background-color: #ffffff;
  height: 100vh;
  margin: 0;
  padding: 0;
}

.page-content {
  display: flex;
  height: 100%;
  background-color: #ffffff;
}

.main-container {
  display: flex;
  flex: 1;
  height: 100%;
  width: 100%;
}

/* 左侧区域：玩家列表 */
.left-section {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-right: 1rpx solid #e8e8e8;
  box-sizing: border-box;
  padding: 20rpx 0;  /* 移除左右padding */
  height: 100%;
  width: 120rpx;  /* 最小宽度 */
  min-width: 120rpx;
  max-width: 120rpx;
  overflow: visible;  /* 允许内容超出 */
}

/* 右侧区域：操作记录 */
.right-section {
  flex: 1;  /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  box-sizing: border-box;
  min-width: 500rpx;
  height: 100%;
}

/* ==================== 左侧：玩家列表 ==================== */
.members-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 10rpx 8rpx 16rpx 8rpx;  /* 调整padding，确保内容不溢出 */
  box-sizing: border-box;
}

.members-scroll {
  flex: 1;
  height: 100%;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 0;
  align-items: center;
}

.member-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  position: relative;
  width: 100%;  /* 占满容器宽度 */
  margin: 0;
}

.member-square {
  width: 104rpx;  /* 恢复原始大小 */
  height: 128rpx;
  background-color: transparent;
  border-radius: 8rpx;
  position: relative;
  overflow: visible;
  transition: all 0.25s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 6rpx;
}

.member-item:active .member-square {
  transform: scale(0.95);
  background-color: #f0f0f0;
}

.member-item:active {
  transform: scale(0.98);
  background-color: #f0f0f0;
}

.member-avatar {
  width: 88rpx;  /* 恢复原始大小 */
  height: 88rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.invite-avatar {
  width: 88rpx;  /* 恢复原始大小 */
  height: 88rpx;
  border-radius: 8rpx;
  border: none;
  box-shadow: none;
}

/* 邀请按钮文字 - 在图标下方，黑色字体 */
.invite-name {
  font-size: 18rpx;  /* 恢复原始大小 */
  color: #000000;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 4rpx;
  line-height: 1;
}

/* 邀请按钮 - 确保和用户组样式完全一致 */
.invite-member .member-square {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 6rpx;
  height: 128rpx; /* 恢复原始高度 */
}

.invite-member:active .member-square {
  transform: scale(0.95);
  background-color: #f0f0f0;
}

.member-name {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  font-size: 18rpx;  /* 恢复原始大小 */
  color: #ffffff;
  font-weight: 600;
  text-align: center;
  padding: 5rpx 6rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  z-index: 2;
}

/* 积分外层容器 - 紧贴在头像下方 */
.score-container {
  position: absolute;
  bottom: 13rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 积分文本 */
.member-score {
  font-size: 18rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 18rpx;
  white-space: nowrap;
  overflow: hidden;
}

.member-score.scroll {
  animation: marquee 6s linear infinite;
}

@keyframes marquee {
  0% { transform: translateX(100%); }
  10% { transform: translateX(0); }
  90% { transform: translateX(0); }
  100% { transform: translateX(-100%); }
}

/* 正分 - 绿色背景 */
.score-container.positive {
  background-color: #4CD964;
}

/* 负分 - 红色背景 */
.score-container.negative {
  background-color: #FF3B30;
}

.creator-tag {
  position: absolute;
  top: -3rpx;
  right: -3rpx;
  padding: 3rpx 8rpx;
  background: linear-gradient(135deg, #4CD964 0%, #4CD964 100%);
  border-radius: 6rpx;
  font-size: 14rpx;
  font-weight: 600;
  color: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(76, 175, 80, 0.2);
  z-index: 3;
}

.add-member .member-square {
  background-color: #f7f7f7;
  border: 2rpx dashed #c5c5c5;
  border-radius: 8rpx;
  height: 90rpx;
}

.add-square {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  transition: all 0.25s;
  border-radius: 8rpx;
}

.add-member:active .add-square {
  border-color: #FF7A2F;
  background-color: rgba(255, 122, 47, 0.05);
}

.add-avatar {
  font-size: 32rpx;  /* 恢复原始大小 */
  color: #999999;
  font-weight: 600;
}

/* ==================== 右侧：底部按钮区域 ==================== */
.bottom-actions-container {
  flex-shrink: 0;
  display: flex;
  gap: 16rpx;
  margin-bottom: 50rpx;
  align-self: stretch;
  background-color: transparent;
  box-sizing: border-box;
}

.bottom-actions-container .action-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.25s;
}

/* ==================== 右侧：奖池区域 ==================== */
.prize-pool-section {
  margin-bottom: 0; /* 移除底部间距，解决留白问题 */
  background-color: #ffffff;
  padding-bottom: 16rpx;
}

.prize-pool-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.25);
  text-align: center;
  position: relative;
}

.prize-pool-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.prize-pool-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
  margin-right: 8rpx;
}

.prize-pool-icon {
  font-size: 32rpx;
}

.prize-pool-amount {
  margin-bottom: 16rpx;
}

.prize-pool-amount .amount-number {
  font-size: 56rpx;
  color: #ffffff;
  font-weight: 700;
  display: inline-block;
  transition: transform 0.3s;
}

.prize-pool-amount.animate .amount-number {
  animation: amountBounce 0.4s ease-out;
}

@keyframes amountBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.15); }
}

.prize-pool-amount .amount-unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 6rpx;
}

.prize-pool-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.receive-tip {
  margin-top: 20rpx;
  padding: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 600;
  opacity: 0;
  transform: translateY(10rpx);
  transition: all 0.3s;
}

.receive-tip.show {
  opacity: 1;
  transform: translateY(0);
}

.receive-pool-btn {
  margin: 16rpx auto 0 auto; /* 居中显示 */
  width: 95%; /* 调整宽度，保持居中 */
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  color: #667eea;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: 2rpx solid #667eea;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
  transition: all 0.25s;
}

.receive-pool-btn:active {
  transform: scale(0.98);
  background-color: rgba(102, 126, 234, 0.05);
}

.receive-pool-btn.disabled {
  opacity: 0.4;
  background-color: #f0f0f0;
  color: #999999;
  border-color: #e0e0e0;
  box-shadow: none;
}

/* 奖池内容区域（可点击） */
.prize-pool-content {
  padding: 20rpx;
}

/* 跟/过/all in按钮容器（与奖池信息分离） */
.bet-actions-row {
  display: flex;
  gap: 12rpx;
  padding: 0 20rpx 20rpx;
}

.bet-action-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  transition: all 0.25s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.bet-action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.bet-action-btn.disabled {
  opacity: 0.5;
  background: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.bet-action-text {
  color: #FF7A2F;
  font-size: 28rpx;
  font-weight: 600;
}

.bet-action-btn.disabled .bet-action-text {
  color: #999999;
}

/* 设置弹窗 */
.settings-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  z-index: 1001;
  opacity: 0;
  transition: all 0.3s;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.settings-modal.show {
  opacity: 1;
}

.setting-item {
  padding: 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.setting-description {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.setting-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.setting-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  border: 2rpx solid #e8e8e8;
}

.setting-input:focus {
  border-color: #FF7A2F;
  background-color: #ffffff;
}

.setting-unit {
  font-size: 26rpx;
  color: #666666;
}

/* ==================== 左侧底部按钮区域 ==================== */
.left-bottom-buttons {
  display: flex;
  flex-direction: column-reverse;
  gap: 16rpx;
  padding: 16rpx 8rpx;  /* 调整padding */
  margin-top: auto;
  position: relative;
  z-index: 1;
}

.left-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;  /* 稍微增大按钮 */
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.25s;
  align-self: center;
  flex-shrink: 0;
}

.left-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.left-btn.invite-btn,
.left-btn.settings-btn,
.left-btn.exit-btn {
  background: linear-gradient(135deg, #757575 0%, #959595 100%);
}

.left-btn-icon {
  font-size: 28rpx;  /* 减小图标大小 */
  color: #ffffff;
  line-height: 1;
  margin-bottom: 2rpx;
}

.left-btn-text {
  font-size: 16rpx;  /* 减小文字大小 */
  font-weight: 500;
  color: #ffffff;
  line-height: 1;
}

/* ==================== 右侧：聊天室样式 ==================== */
.chat-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
  padding: 10rpx 16rpx 0 12rpx; /* 减少padding以避免滚动条 */
  background-color: #EDEDED;
}

.chat-scroll {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  padding-bottom: 30rpx;
}

.chat-list {
  padding: 0;
  min-height: 100%;
  padding: 0 4rpx; /* 为消息内容添加内部间距 */
}

.chat-message {
  display: flex;
  margin-bottom: 16rpx;
  animation: messageFadeIn 0.3s ease-out;
}

@keyframes messageFadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chat-message.mine {
  justify-content: flex-end;
}

.chat-message.others {
  justify-content: flex-start;
}

.chat-message.system {
  justify-content: center;
  margin: 16rpx 0;
}

/* 新增：消息组件容器 */
.message-component {
  display: flex;
  flex-direction: column;
  max-width: 75%;
}

/* 时间戳样式 */
.message-time {
  font-size: 18rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-bottom: 4rpx;
}

.chat-message.mine .message-time {
  text-align: right;
}

.chat-message.others .message-time {
  text-align: left;
}

.chat-message.system .message-time {
  text-align: center;
}

/* 内容行（头像+气泡） */
.message-content-row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.chat-message.mine .message-content-row {
  flex-direction: row-reverse;
}

.chat-message.others .message-content-row {
  flex-direction: row;
}

.chat-message.system .message-content-row {
  justify-content: center;
}

.bubble {
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
  word-wrap: break-word;
  position: relative;
}

/* 自己的操作：绿色气泡，右对齐，头像在气泡右边 */
.chat-message.mine .bubble {
  background: #07C160;
  color: #ffffff;
  border-radius: 12rpx;
  max-width: 75%;
}

/* 他人的操作：白色气泡，左对齐，头像在气泡左边 */
.chat-message.others .bubble {
  background: #FFFFFF;
  color: #333333;
  border-radius: 12rpx;
  max-width: 75%;
}

/* 系统消息：浅灰色气泡，居中对齐 */
.chat-message.system .bubble {
  background: #D1D1D1;
  color: #999999;
  text-align: center;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin: 0 20rpx; /* 增加两侧间距 */
  word-wrap: break-word;
  word-break: break-all;
  max-width: 90%; /* 增加最大宽度限制 */
  display: inline-block; /* 确保气泡能自适应 */
}

.chat-message.system .message-component {
  max-width: 70%; /* 进一步增加宽度 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 确保消息内容能正确换行 */
.chat-message.system .message-content {
  word-wrap: break-word;
  word-break: break-all;
  text-align: center;
}

.message-content {
  display: block;
  line-height: 1.6;
}

.chat-message.mine .message-content .me {
  color: #FF7A2F;
  font-weight: 600;
}

.chat-message.others .message-content .me {
  color: #FF7A2F;
  font-weight: 600;
}

/* 积分金额高亮样式 - 橙色 */
.chat-message .message-content .transfer-amount {
  color: #FF9500;
  font-weight: 600;
}

.chat-message .message-content .receive-amount {
  color: #34C759;
  font-weight: 600;
}


/* 被转账人昵称高亮显示 */
.receiver-name {
  color: #007AFF;
  font-weight: 700;
  font-size: 28rpx;
}

/* 转账金额：橙色突出显示 */
.transfer-amount {
  color: #FF9500;
  font-weight: 700;
  font-size: 28rpx;
}

/* 收取奖池：红色突出显示 */
.chat-message .bubble.receive {
  color: #FF3B30;
  font-weight: 600;
}

/* ==================== 消息头像样式 ==================== */
.avatar-container {
  position: relative;
  width: 96rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-right: 8rpx;
}

.chat-message.mine .avatar-container {
  margin-right: 0;
  margin-left: 8rpx;
}

/* 下注模式单头像容器（缩小宽度以减少间距） */
.avatar-container.bet-avatar {
  width: 56rpx;
  height: 48rpx;
}

/* 单头像样式 */
.single-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #E5E5E5;
}

.chat-message.mine .single-avatar {
  border-color: #07C160;
  position: absolute;
  right: 0;
}

.chat-message.others .single-avatar {
  border-color: #E5E5E5;
  position: absolute;
  left: 0;
}

/* ==================== 弹窗通用样式 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 999;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #999999;
  padding: 10rpx;
  transition: all 0.25s;
}

.modal-close:active {
  transform: rotate(90deg);
  color: #666666;
}

.modal-body {
  padding: 24rpx 32rpx 120rpx;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.25s;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.action-btn.cancel {
  background: #ffffff;
  color: #666666;
  border: 2rpx solid #e8e8e8;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #4CD964 0%, #4CD964 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  border: none;
}

.action-btn.secondary {
  background: #ffffff;
  color: #4CD964;
  border: 2rpx solid #4CD964;
  box-shadow: none;
}

.action-btn.expense-btn {
  background: linear-gradient(135deg, #FF7A2F 0%, #FF9559 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 47, 0.35);
}

.action-btn.expense-btn.disabled {
  background: linear-gradient(135deg, #c8c8c8 0%, #d8d8d8 100%);
  color: #999999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transform: none;
}

.action-btn.settle-btn {
  background: linear-gradient(135deg, #4CD964 0%, #6FEB80 100%);
  box-shadow: 0 4rpx 16rpx rgba(76, 217, 100, 0.35);
}

.action-btn.settle-btn.disabled {
  background: linear-gradient(135deg, #c8c8c8 0%, #d8d8d8 100%);
  color: #999999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transform: none;
}

.btn-icon {
  font-size: 26rpx;
  margin-right: 8rpx;
  line-height: 1;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 1;
}

/* 转账弹窗 */
.transfer-modal,
.prize-modal,
.confirm-modal {
  position: fixed;
  left: 0;
  bottom: -100%;
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
