/* pages/room/room.wxss */

/* ==================== 全局与容器 ==================== */
page {
  background-color: #ffffff;
  height: 100vh;
  margin: 0;
  padding: 0;
}

.page-content {
  display: flex;
  height: 100%;
  background-color: #ffffff;
}

.main-container {
  display: flex;
  flex: 1;
  height: 100%;
  width: 100%;
}

/* 左侧区域：玩家列表 - 胶囊卡片风格 */
.left-section {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f5f5 0%, #e8e8e8 100%);
  border-right: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  padding: 0;
  height: 100%;
  width: 160rpx;  /* 微调至160rpx */
  min-width: 160rpx;
  max-width: 160rpx;
  overflow: hidden;
}

/* 右侧区域：操作记录 */
.right-section {
  flex: 1;  /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  box-sizing: border-box;
  min-width: 400rpx;
  height: 100%;
}

/* ==================== 左侧：胶囊卡片列表 ==================== */
.members-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}

.members-scroll {
  flex: 1;
  height: 100%;
}

/* 侧边栏列表容器 */
.sidebar-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 0 16rpx;
}

/* ==================== 胶囊卡片设计 - 莫兰迪色系 ==================== */

/* 胶囊卡片基础样式 */
.capsule-card {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-sizing: border-box;
  position: relative;
}

.capsule-card:active {
  transform: scale(0.97);
  background: rgba(255, 255, 255, 0.9);
}

/* 房主卡片 - 淡金色调 */
.capsule-card.is-creator {
  background: rgba(255, 251, 240, 0.8);
  border: 2rpx solid rgba(255, 193, 7, 0.3);
}

/* 本人卡片 - 蓝紫边框 + 浅蓝色投影 */
.capsule-card.is-me {
  border: 2rpx solid #5B73F9;
  box-shadow: 0 4rpx 12rpx rgba(91, 115, 249, 0.2);
}

/* 既是房主又是本人 */
.capsule-card.is-creator.is-me {
  background: rgba(255, 251, 240, 0.8);
  border: 2rpx solid #5B73F9;
  box-shadow: 0 4rpx 12rpx rgba(91, 115, 249, 0.2);
}

/* 房主皇冠 - 右上角带投影 */
.crown-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  font-size: 28rpx;
  z-index: 10;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 193, 7, 0.5));
  animation: crown-float 2.5s ease-in-out infinite;
}

@keyframes crown-float {
  0%, 100% { transform: translateY(0) rotate(-3deg); }
  50% { transform: translateY(-4rpx) rotate(3deg); }
}

/* 胶囊卡片头像 - 90rpx */
.capsule-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
}

/* 胶囊卡片昵称 - 22rpx，#666 */
.capsule-name {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  margin-bottom: 6rpx;
}

/* 分数胶囊 - 紧凑排列 */
.score-capsule {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  min-width: 50rpx;
}

/* 正分（赢）- 莫兰迪：极淡薄荷绿背景 + 深翠绿文字 */
.score-capsule.positive {
  background: #E6F9F0;
}

.score-capsule.positive .score-capsule-text {
  color: #00B578;
  font-weight: 700;
}

/* 负分（输）- 莫兰迪：极淡樱花粉背景 + 赤红文字 */
.score-capsule.negative {
  background: #FFF0F0;
}

.score-capsule.negative .score-capsule-text {
  color: #FF4D4F;
  font-weight: 700;
}

/* 分数文字 - 24rpx加粗 */
.score-capsule-text {
  font-size: 24rpx;
  line-height: 1;
}

/* ==================== 功能按钮卡片 ==================== */

/* 邀请好友卡片 - 莫兰迪蓝虚线边框 */
.capsule-card.invite-card {
  background: rgba(255, 255, 255, 0.65);
  border: 2rpx dashed rgba(91, 115, 249, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(91, 115, 249, 0.1);
}

.capsule-card.invite-card:active {
  background: rgba(245, 247, 255, 0.9);
  border-color: rgba(91, 115, 249, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(91, 115, 249, 0.2);
}

/* 邀请图标 - 和头像一样大 (90rpx) */
.invite-avatar-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 卡片标签文字 */
.capsule-label {
  font-size: 20rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
}

.capsule-label.gray {
  color: #999999;
}

/* 添加成员卡片（虚线框） */
.capsule-card.add-card {
  background: rgba(255, 255, 255, 0.4);
  border: 2rpx dashed rgba(150, 150, 150, 0.4);
}

.capsule-card.add-card:active {
  background: rgba(255, 255, 255, 0.6);
  border-color: #999999;
}

.add-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: rgba(150, 150, 150, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
  font-weight: 300;
  margin-bottom: 12rpx;
}

.capsule-card.add-card:active .add-icon-wrap {
  background: rgba(150, 150, 150, 0.25);
  color: #666666;
}

/* ==================== 右侧：底部按钮区域 ==================== */
.bottom-actions-container {
  flex-shrink: 0;
  display: flex;
  gap: 16rpx;
  margin-bottom: 50rpx;
  align-self: stretch;
  background-color: transparent;
  box-sizing: border-box;
}

.bottom-actions-container .action-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.25s;
}

/* ==================== 下注模式面板 - 现代风格 ==================== */

/* 面板容器 - 与聊天区域一致灰色背景 */
.bet-panel-wrapper {
  padding: 20rpx 24rpx;
  background: #EDEDED;
}

/* 公共奖池卡片 - 现代悬浮设计 */
.prize-pool-card-modern {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin: 0 8rpx;
  box-shadow: 
    0 10rpx 30rpx rgba(118, 75, 162, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  text-align: center;
  position: relative;
  overflow: hidden;
}

/* 卡片光泽效果 */
.prize-pool-card-modern::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.15) 0%, transparent 50%);
  pointer-events: none;
}

/* 点击区域（奖袋、数字、提示） */
.prize-pool-clickable {
  position: relative;
  z-index: 1;
}

/* 奖袋图标 */
.prize-icon-wrap {
  margin-bottom: 16rpx;
}

.prize-bag-icon {
  font-size: 56rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 积分数字 - 亮金色 */
.prize-amount-wrap {
  margin-bottom: 16rpx;
}

.prize-amount-number {
  font-size: 80rpx;
  font-weight: 800;
  color: #FFE66D;
  text-shadow: 
    0 0 20rpx rgba(255, 230, 109, 0.8),
    0 0 40rpx rgba(255, 230, 109, 0.4),
    0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  display: inline-block;
  line-height: 1.1;
}

.prize-amount-wrap.animate .prize-amount-number {
  animation: goldBounce 0.4s ease-out;
}

@keyframes goldBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* 提示文字 */
.prize-pool-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

/* 收取状态提示 */
.prize-receiver-tip {
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 500;
  opacity: 0;
  transform: translateY(10rpx);
  transition: all 0.3s ease;
  backdrop-filter: blur(4rpx);
}

.prize-receiver-tip.show {
  opacity: 1;
  transform: translateY(0);
}

/* 游戏操作按钮 - 紧贴奖池下方，莫兰迪纯色 */
.game-actions-row {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx 0;
  justify-content: center;
  background: transparent;
}

/* 通用按钮样式 - 莫兰迪纯色 */
.game-action-btn {
  height: 88rpx;
  flex: 1;
  max-width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  transition: all 0.25s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border: none;
}

.game-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.game-action-btn.disabled {
  background: #d9d9d9 !important;
  box-shadow: none;
}

.game-action-btn.disabled .action-btn-text {
  color: #999999;
}

.action-btn-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 跟 (Call) - 莫兰迪蓝 */
.game-action-btn.call {
  background: #7B9ECE;
}

.game-action-btn.call:active {
  background: #6A8DBD;
}

/* 过 (Pass) - 莫兰迪橙 */
.game-action-btn.pass {
  background: #E8A87C;
}

.game-action-btn.pass:active {
  background: #D7976B;
}

/* All in - 莫兰迪紫 */
.game-action-btn.allin {
  background: #9B8AA5;
}

.game-action-btn.allin:active {
  background: #8A7994;
}

/* 收取奖池按钮 - 在卡片内部，白色背景 */
.collect-pool-btn {
  margin: 24rpx auto 0;
  width: 240rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  color: #764ba2;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.25s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
}

.collect-pool-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.collect-pool-btn.disabled {
  opacity: 0.5;
  background: rgba(255, 255, 255, 0.5);
  box-shadow: none;
  color: #999999;
}

/* 设置弹窗 */
.settings-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  z-index: 1001;
  opacity: 0;
  transition: all 0.3s;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.settings-modal.show {
  opacity: 1;
}

.setting-item {
  padding: 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.setting-description {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.setting-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.setting-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  border: 2rpx solid #e8e8e8;
}

.setting-input:focus {
  border-color: #FF7A2F;
  background-color: #ffffff;
}

.setting-unit {
  font-size: 26rpx;
  color: #666666;
}

/* ==================== 右侧：聊天室样式 ==================== */
.chat-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
  padding: 10rpx 16rpx 0 12rpx; /* 减少padding以避免滚动条 */
  background-color: #EDEDED;
}

.chat-scroll {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  padding-bottom: 30rpx;
}

.chat-list {
  padding: 0;
  min-height: 100%;
  padding: 0 4rpx; /* 为消息内容添加内部间距 */
}

.chat-message {
  display: flex;
  margin-bottom: 16rpx;
  animation: messageFadeIn 0.3s ease-out;
}

@keyframes messageFadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chat-message.mine {
  justify-content: flex-end;
}

.chat-message.others {
  justify-content: flex-start;
}

.chat-message.system {
  justify-content: center;
  margin: 16rpx 0;
}

/* 新增：消息组件容器 */
.message-component {
  display: flex;
  flex-direction: column;
  max-width: 75%;
}

/* 时间戳样式 */
.message-time {
  font-size: 18rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-bottom: 4rpx;
}

.chat-message.mine .message-time {
  text-align: right;
}

.chat-message.others .message-time {
  text-align: left;
}

.chat-message.system .message-time {
  text-align: center;
}

/* 内容行（头像+气泡） */
.message-content-row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.chat-message.mine .message-content-row {
  flex-direction: row-reverse;
}

.chat-message.others .message-content-row {
  flex-direction: row;
}

.chat-message.system .message-content-row {
  justify-content: center;
}

.bubble {
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
  word-wrap: break-word;
  position: relative;
}

/* 自己的操作：绿色气泡，右对齐，头像在气泡右边 */
.chat-message.mine .bubble {
  background: #07C160;
  color: #ffffff;
  border-radius: 12rpx;
  max-width: 75%;
}

/* 他人的操作：白色气泡，左对齐，头像在气泡左边 */
.chat-message.others .bubble {
  background: #FFFFFF;
  color: #333333;
  border-radius: 12rpx;
  max-width: 75%;
}

/* 系统消息：浅灰色气泡，居中对齐 */
.chat-message.system .bubble {
  background: #D1D1D1;
  color: #999999;
  text-align: center;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin: 0 20rpx; /* 增加两侧间距 */
  word-wrap: break-word;
  word-break: break-all;
  max-width: 90%; /* 增加最大宽度限制 */
  display: inline-block; /* 确保气泡能自适应 */
}

.chat-message.system .message-component {
  max-width: 70%; /* 进一步增加宽度 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 确保消息内容能正确换行 */
.chat-message.system .message-content {
  word-wrap: break-word;
  word-break: break-all;
  text-align: center;
}

.message-content {
  display: block;
  line-height: 1.6;
}

.chat-message.mine .message-content .me {
  color: #FF7A2F;
  font-weight: 600;
}

.chat-message.others .message-content .me {
  color: #FF7A2F;
  font-weight: 600;
}

/* 积分金额高亮样式 - 橙色 */
.chat-message .message-content .transfer-amount {
  color: #FF9500;
  font-weight: 600;
}

.chat-message .message-content .receive-amount {
  color: #34C759;
  font-weight: 600;
}


/* 被转账人昵称高亮显示 */
.receiver-name {
  color: #007AFF;
  font-weight: 700;
  font-size: 28rpx;
}

/* 转账金额：橙色突出显示 */
.transfer-amount {
  color: #FF9500;
  font-weight: 700;
  font-size: 28rpx;
}

/* 收取奖池：红色突出显示 */
.chat-message .bubble.receive {
  color: #FF3B30;
  font-weight: 600;
}

/* ==================== 消息头像样式 ==================== */
.avatar-container {
  position: relative;
  width: 96rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-right: 8rpx;
}

.chat-message.mine .avatar-container {
  margin-right: 0;
  margin-left: 8rpx;
}

/* 下注模式单头像容器（缩小宽度以减少间距） */
.avatar-container.bet-avatar {
  width: 56rpx;
  height: 48rpx;
}

/* 单头像样式 */
.single-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #E5E5E5;
}

.chat-message.mine .single-avatar {
  border-color: #07C160;
  position: absolute;
  right: 0;
}

.chat-message.others .single-avatar {
  border-color: #E5E5E5;
  position: absolute;
  left: 0;
}

/* ==================== 弹窗通用样式 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 999;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #999999;
  padding: 10rpx;
  transition: all 0.25s;
}

.modal-close:active {
  transform: rotate(90deg);
  color: #666666;
}

.modal-body {
  padding: 24rpx 32rpx 120rpx;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.25s;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.action-btn.cancel {
  background: #ffffff;
  color: #666666;
  border: 2rpx solid #e8e8e8;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #4CD964 0%, #4CD964 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  border: none;
}

.action-btn.secondary {
  background: #ffffff;
  color: #4CD964;
  border: 2rpx solid #4CD964;
  box-shadow: none;
}

/* 支出按钮 - 温暖橙色渐变 */
.action-btn.expense-btn {
  background: linear-gradient(135deg, #FF9C6E 0%, #FF7A45 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 69, 0.35);
  border-radius: 40rpx;
