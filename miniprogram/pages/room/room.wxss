/* ==================== 动画样式 ==================== */

/* 转入奖池飘动动画关键帧 */
@keyframes float-up-right {
  0% {
    transform: translate(0, 0) scale(0.6);
    opacity: 0;
  }
  20% {
    transform: translate(0, -20px) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(80px, -120px) scale(0.9);
    opacity: 0;
  }
}

/* 转入奖池飘动动画容器 */
.float-animation-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 999;
  overflow: visible;
  background: transparent;
  border: none;
}

/* 飘动金额元素 */
.float-amount {
  position: absolute;
  font-size: 24px;
  font-weight: 800;
  color: #FFD700;
  white-space: nowrap;
  opacity: 0;
  animation-name: float-up-right;
  animation-duration: 800ms;
  animation-timing-function: ease-out;
  animation-fill-mode: forwards;
  will-change: transform;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000;
}

/* 移除发光效果，避免白色框闪烁 */

/* 收取奖池动画容器（全屏半透明遮罩） */
.receive-animation-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: radial-gradient(circle at center, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.7) 100%);
  pointer-events: none;
  z-index: 1000;
  overflow: hidden;
  backdrop-filter: blur(4rpx);
}

/* 收取金额显示 */
.receive-amount-display {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1001;
  pointer-events: none;
  animation: receive-amount-pop 1.2s ease-out;
  max-width: 90vw;
  text-align: center;
}

.receive-amount-text {
  font-size: 64px;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 
    0 0 30rpx rgba(255, 215, 0, 0.8),
    0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  letter-spacing: 4rpx;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transform: translateZ(0);
  backface-visibility: hidden;
  word-wrap: break-word;
  white-space: normal;
  line-height: 1.2;
}

@keyframes receive-amount-pop {
  0% {
    transform: translate(-50%, -50%) scale(0.3);
    opacity: 0;
    filter: blur(2px);
  }
  30% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
    filter: blur(0);
  }
  70% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0;
    filter: blur(5px);
  }
}

/* 彩带动画关键帧 */
@keyframes confetti-fall {
  0% {
    transform: translateY(0) rotate(0deg) scale(0.8);
    opacity: 0;
  }
  15% {
    transform: translateY(15px) rotate(45deg) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg) scale(0.7);
    opacity: 0;
  }
}

/* 金币动画关键帧 */
@keyframes coin-fall {
  0% {
    transform: translateY(0) scale(0.6);
    opacity: 0;
  }
  20% {
    transform: translateY(20px) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) scale(0.8);
    opacity: 0;
  }
}

/* 彩带元素 */
.confetti-item {
  position: absolute;
  border-radius: 2rpx;
  opacity: 0.9;
  transform-origin: center top;
  animation-name: confetti-fall;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

/* 金币元素 */
.coin-item {
  position: absolute;
  font-size: 16px;
  text-align: center;
  opacity: 1;
  transform-origin: center top;
  background: #FFD700;
  border-radius: 50%;
  border: 1rpx solid #D4A500;
  display: flex;
  align-items: center;
  justify-content: center;
  animation-name: coin-fall;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
  box-shadow: 0 2rpx 8rpx rgba(184, 134, 11, 0.3);
}

.coin-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.coin-text {
   display: block;
   font-size: 12px;
   font-weight: bold;
   color: #B8860B;
   text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
 }

/* 加载更多提示样式 */
.load-more-container {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-container.clickable {
  color: #576b95;
  cursor: pointer;
}

.load-more-container.clickable:active {
  background: #e8e8e8;
}

.loading-icon {
  display: inline-block;
  animation: rotate 1s linear infinite;
  margin-right: 8rpx;
  font-size: 28rpx;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 分享按钮 - 去除 button 默认样式 */
.share-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  font-size: inherit;
  color: inherit;
  font-weight: inherit;
  border-radius: 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}
/* ==================== 全屏悬浮拖动菜单 (Floating Action Button) ==================== */

/* 拖动区域 - 全屏覆盖 */
.fab-area {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 999;
}

/* 可拖动容器 - movable-view */
.fab-container {
  width: 100rpx !important;
  height: 100rpx !important;
  pointer-events: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  /* 确保movable-view本身是正方形 */
  min-width: 100rpx;
  min-height: 100rpx;
  max-width: 100rpx;
  max-height: 100rpx;
  overflow: visible;
}

/* 主按钮 - 圆形深色背景 */
.fab-main {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  z-index: 2;
  /* 确保严格圆形 */
  flex-shrink: 0;
  flex-grow: 0;
}

.fab-main:active {
  transform: scale(0.95);
  background: #444444;
}

/* 主按钮图标 - 三道杠 */
.fab-main-icon {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 300;
  transition: transform 0.3s ease;
}

.fab-main-icon.rotated {
  transform: rotate(90deg);
}

/* 子按钮菜单容器 */
.fab-menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 16rpx;
  opacity: 0;
  transform: translateY(20rpx) scale(0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.fab-menu.expanded {
  opacity: 1;
  transform: translateY(0) scale(1);
  pointer-events: auto;
}

/* 子按钮 */
.fab-sub-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.25s ease;
  opacity: 0;
  transform: translateY(20rpx);
}

.fab-menu.expanded .fab-sub-btn {
  opacity: 1;
  transform: translateY(0);
}

/* 设置按钮 - 灰色 */
.fab-sub-btn.settings {
  background: #808080;
  transition-delay: 0.05s;
}

.fab-sub-btn.settings:active {
  background: #666666;
  transform: scale(0.95);
}

/* 退出按钮 - 红色 */
.fab-sub-btn.exit {
  background: #FF5B5B;
  transition-delay: 0.1s;
}

.fab-sub-btn.exit:active {
  background: #FF4040;
  transform: scale(0.95);
}

/* 子按钮图标 */
.fab-sub-icon {
  font-size: 32rpx;
}
